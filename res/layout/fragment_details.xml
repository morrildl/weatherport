<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_gravity="left"
        android:layout_marginLeft="8dip"
        android:layout_rowSpan="3"
        android:src="@drawable/sunny" />

    <TextView
        android:id="@+id/location_code_text"
        android:layout_columnSpan="2"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="left"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/location_name_text"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_gravity="left|fill_horizontal"
        android:text="@string/loading"
        android:singleLine="false"
        android:layout_width="0px"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- barometric pressure -->

    <TextView
        android:id="@+id/pressure_label"
        android:layout_columnSpan="2"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="left|top"
        android:text="@string/pressure_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/pressure_value"
        android:layout_marginBottom="4dip"
        android:layout_gravity="left|top"
        android:layout_marginLeft="8dip"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- temp -->

    <TextView
        android:id="@+id/temp_label"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:text="@string/temp_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/temp_value"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="left|top"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- dew point -->

    <TextView
        android:id="@+id/dew_label"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:text="@string/dew_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dew_value"
        android:layout_gravity="left|top"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- elevation -->

    <TextView
        android:id="@+id/elevation_label"
        android:layout_columnSpan="2"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="left|top"
        android:text="@string/elevation_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/elevation_value"
        android:layout_gravity="left|top"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- wind speed -->

    <TextView
        android:id="@+id/windspeed_label"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:text="@string/windspeed_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/windspeed_value"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="left|top"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- wind direction -->

    <TextView
        android:id="@+id/winddir_label"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:text="@string/winddir_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/winddir_value"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="left|top"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- humidity -->

    <TextView
        android:id="@+id/humidity_label"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:text="@string/humidity_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/humidity_value"
        android:layout_marginLeft="8dip"
        android:layout_marginBottom="4dip"
        android:layout_gravity="left|top"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>